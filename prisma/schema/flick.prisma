enum ReactionType {
  UPVOTE
  DOWNVOTE
  HEART
}

model Flick {
  id          String   @id @default(cuid())
  title       String
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  creator     User?    @relation(fields: [creatorId], references: [id])
  creatorId   String?
}

model FlickResponse {
  id          String   @id @default(cuid())
  title       String
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  creator     User?    @relation(fields: [creatorId], references: [id])
  creatorId   String?
}

model FlickReaction {
  id        String       @id @default(cuid())
  type      ReactionType
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt
  creator   User?        @relation(fields: [creatorId], references: [id])
  creatorId String?
}
