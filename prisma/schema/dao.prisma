model DAO {
  id                      String     @id @default(cuid())
  name                    String
  description             String
  publicKey               String
  isSubDAO                Boolean    @default(false)
  createdAt               DateTime   @default(now())
  updatedAt               DateTime   @updatedAt
  type                    DAOType
  isHybrid                Boolean    @default(false)
  mint                    Token?     @relation(fields: [tokenId], references: [id])
  tokenId                 String?
  circulatingSupply       Decimal
  allowSubDAO             Boolean    @default(false)
  parentDAO               DAO?       @relation("ParentDAO", fields: [parentDAOId], references: [id])
  parentDAOId             String?
  subDAOs                 DAO[]      @relation("ParentDAO")
  subDAOCreationThreshold Decimal
  proposals               Proposal[]
  treasury                Treasury   @relation("Treasury", fields: [treasuryId], references: [id])
  treasuryId              String     @unique
  creator                 User       @relation("Creator", fields: [creatorId], references: [id])
  creatorId               String
  members                 User[]     @relation("Member")
}

enum DAOType {
  NFT
  TOKEN
  HYBRID
}
