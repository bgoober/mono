enum ProposalStatus {
  PENDING
  ACTIVE
  FAILED
  SUCCEEDED
}

model Proposal {
  id           String         @id @default(cuid())
  title        String
  description  String
  publicKey    String
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt
  DAO          DAO            @relation(fields: [daoId], references: [id])
  daoId        String
  creator      User           @relation(fields: [creatorId], references: [id])
  creatorId    String
  quorum       Decimal
  forVotes     Int
  againstVotes Int
  abstainVotes Int
  endDate      DateTime
  status       ProposalStatus
  votes        Vote[]
}
