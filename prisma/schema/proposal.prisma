enum ProposalStatus {
  PENDING
  ACTIVE
  FAILED
  SUCCEEDED
}

model Proposal {
  id          String   @id @default(cuid())
  title       String
  description String
  publicKey   String
  quorum      Decimal
  endDate     DateTime

  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt
  forVotes     Int
  againstVotes Int
  abstainVotes Int
  creatorId    String
  creator      User           @relation(fields: [creatorId], references: [id])
  daoId        String
  DAO          DAO            @relation(fields: [daoId], references: [id])
  status       ProposalStatus
  votes        Vote[]
}
